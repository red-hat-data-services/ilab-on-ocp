FROM registry.access.redhat.com/ubi9/python-312:1@sha256:3da39d0c938994161bdf9b6b13eb2eacd9a023c86dd5166f3da31df171c88780

ARG SOURCE_CODE=.

# Default for ubi8/python
WORKDIR /opt/app-root/src/pipelines/distributed-ilab

COPY ${SOURCE_CODE} .

USER root

# pip install `kfp --no-deps` to support install_kfp_package=False but not pull
# in other dependencies. This works because at runtime, because kfp is imported with the
#_KFP_RUNTIME=true env variable set.
RUN echo "Installing Runtime Dependencies" && \
    dnf install -y skopeo && dnf clean all && \
    pip install --no-cache-dir -r requirements-konflux.txt && \
    pip install kfp --no-deps && \
    chgrp -R 0 . && \
    chmod -R g=u . && \
    mv mixtral-tokenizer /models
# Verify that KFP can be imported like it would be at runtime.
RUN _KFP_RUNTIME=true python -c "import kfp"

USER default

# Default for ubi8/python
WORKDIR /opt/app-root/src

LABEL name="odh-ml-pipelines-runtime-generic" \
    com.redhat.component="odh-ml-pipelines-runtime-generic-container" \
    summary="Generic runtime image for pipeline tasks with embedded managed pipelines." \
    description="Generic runtime image for pipeline tasks with embedded managed pipelines." \
    summary="odh-ml-pipelines-runtime-generic" \
    maintainer="['managed-open-data-hub@redhat.com']" \
    io.openshift.expose-services="" \
    io.k8s.display-name="odh-ml-pipelines-runtime-generic" \
    io.k8s.description="odh-ml-pipelines-runtime-generic"
